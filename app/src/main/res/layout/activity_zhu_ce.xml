<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
   <TextView
       android:id="@+id/te_zhu"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:text="注册页面"
       android:gravity="center"
       android:textSize="35sp"
       android:textColor="#A9C43C"
       android:background="#FBEFFE"/>
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/te_zhu"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_username"
        android:hint="请输入用户名:"
        android:paddingLeft="15dp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_username"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_username"
        android:hint="请输入密码:"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edt_repassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_password"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_username"
        android:hint="请再次输入密码:"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:textSize="20sp"/>
    <RadioGroup
        android:id="@+id/rg_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/edt_repassword"
        android:layout_marginTop="20dp">
        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="男"
            android:textColor="#000000"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="女"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </RadioGroup>
    <EditText
        android:id="@+id/edt_idcard"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/rg_1"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_username"
        android:hint="输入手机号:"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:inputType="number"/>
    <Button
        android:id="@+id/btn_yan"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/edt_idcard"
        android:layout_below="@id/rg_1"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn4"
        android:layout_marginLeft="15dp"
        android:text="获取验证码"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/edt_yan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edt_idcard"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_username"
        android:hint="输入验证码:"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:inputType="number"/>
    <Button
        android:id="@+id/btn_zhu"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/edt_yan"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:text="注册"
        android:textSize="25sp"
        android:background="@drawable/bg_zhuce"/>
</RelativeLayout>